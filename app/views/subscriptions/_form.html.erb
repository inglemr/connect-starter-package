<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
     <h3 id="myModalLabel">Subscription</h3>
  </div>
    <%= simple_form_for @subscription, remote: true, html: { style: "display:inline;" } do |f| %>
      <div class="modal-body">
        <div>
          <ul class="errors" style="padding-left: 0px">
            <% if subscription.errors.any? %>
              <div id="error_explanation" class="alert alert-danger" role="alert">
                <% subscription.errors.full_messages.each do |message| %>
                  <li class="errors_list"><%= message %></li>
                <% end %>
              </div>
            <% end %>
          </ul>
        </div>

        <h3 class="panel-title">Enter details</h3>
        <hr></hr>


        <div class="row field form-group">
          <%= f.label :name, class: 'col-sm-4 control-label' %>
          <div class="col-sm-7">
            <%= f.text_field :name, class: 'form-control required' %>
          </div>
        </div>

         <div class="row field form-group">
          <%= f.label :zuora_id, class: 'col-sm-4 control-label' %>
          <div class="col-sm-7">
            <%= f.text_field :zuora_id, class: 'form-control required' %>
          </div>
        </div>

        



      </div>

      <div class="modal-footer" >
        <%= link_to "Close", "#", class: "btn btn-sm btn-danger", data: {dismiss: "modal"} %>
        <%= f.submit f.object.new_record? ? "Create" : "Update", class: "btn btn-success"%>
      </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">

  

</script>
