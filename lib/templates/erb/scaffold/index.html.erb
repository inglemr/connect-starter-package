<p id="notice"><%%= notice %></p>

<%% content_for :breadcrumbs do %>
  <ul class="breadcrumb">
    <li><%%= link_to "Home", root_path %></li>
    <li class="active"><%= plural_table_name.titleize %></li>
  </ul>
<%% end %>

<div class="row">
  <div class="col-lg-12">
    <div class="green-header">
      <h2><%= plural_table_name.titleize %></h2>
    </div>
    <ul class="nav tab-header">
      <li class="active"><a href="#index"><%= plural_table_name.titleize %></a></li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane active" id="index">
        <%% table_actions = capture do %>
          <div class="btn-group">
            <%%= link_to  new_<%= singular_table_name %>_path, :remote => true, :class => 'btn btn-default' do %>
              <span class="fa fa-plus"></span> New <%= singular_table_name.titleize %>
            <%% end %>
          </div>
        <%% end %>
        <%%= render_datatable(<%= controller_class_name.singularize %>, <%= singular_table_name %>s_path(format: "json"), :table_actions => table_actions) %>
      </div>
    </div>
  </div>
</div>
